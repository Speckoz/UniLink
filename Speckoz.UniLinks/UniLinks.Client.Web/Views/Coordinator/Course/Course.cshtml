@model CourseVO

@{
    ViewData["Title"] = "Informaçoes do Curso";
}
<div>
    <h3 class="text-center">@ViewData["Title"]</h3>

    <div>
        <dl class="row">
            <dt class="col-sm-2">Nome do Curso</dt>
            <dd class="col-sm-10">
                <input value="@Model.Name" readonly />
            </dd>
            <dt class="col-sm-2">Quantidade de periodos</dt>
            <dd class="col-sm-10">
                <input value="@Model.Periods" readonly />
            </dd>
        </dl>

        <a asp-action="UpdateCourse" asp-controller="Course" class="btn btn-secondary waves-effect">Atualizar Informaçoes</a>
    </div>
</div>