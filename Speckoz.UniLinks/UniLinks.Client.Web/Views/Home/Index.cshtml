@using System.Security.Claims

@{
    ViewData["Title"] = "Inicio";
    Layout = "EmptyLayout";
}

<nav class="navbar navbar-light navbar-expand-lg fixed-top" id="mainNav">
    <div class="container">
        <a class="navbar-brand animated swing slower js-scroll-trigger" href="/#home">
            <span class="uni-color">Uni</span><span style="color: darkorange;">Link</span>
        </a>
        <button data-toggle="collapse" data-target="#navbarResponsive" class="navbar-toggler navbar-toggler-right " type="button" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
            <i class="mdi mdi-menu mdi-36px black-text"></i>
        </button>
        <div class="collapse navbar-collapse" id="navbarResponsive">
            <ul class="nav navbar-nav ml-auto">
                <li class="nav-item" role="presentation"><a class="nav-link js-scroll-trigger" href="#devs">Desenvolvedores</a></li>
                <li class="nav-item" role="presentation"><a class="nav-link js-scroll-trigger" href="#about">Sobre</a></li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        @if (User.Claims.Count() > 0)
                        {
                            <span>
                                <i class="mdi mdi-account icon-margin-right"></i> @User.FindFirst(ClaimTypes.Name).Value
                            </span>
                        }
                        else
                        {
                            <span>
                                <i class="mdi mdi-login icon-margin-right"></i> Entrar como
                            </span>
                        }
                    </a>
                    <div class="dropdown-menu dropdown-menu-right dropdown-info" aria-labelledby="navbarDropdownMenuLink">
                        @if (User.FindFirst(ClaimTypes.Role)?.Value == nameof(UserTypeEnum.Coordinator))
                        {
                            <a class="dropdown-item waves-effect" href="/coordinator">
                                <i class="mdi mdi-account-star icon-margin-right"></i> Painel
                            </a>
                        }
                        else if (User.FindFirst(ClaimTypes.Role)?.Value == nameof(UserTypeEnum.Student))
                        {
                            <a class="dropdown-item waves-effect" href="/student">
                                <i class="mdi mdi-record-rec icon-margin-right"></i> Minhas Aulas
                            </a>
                            <a class="dropdown-item waves-effect" href="/student/classes">
                                <i class="mdi mdi-google-lesson icon-margin-right"></i> Salas Online
                            </a>
                        }
                        else
                        {
                            <a class="dropdown-item waves-effect" href="/auth/student">
                                <i class="mdi mdi-account-group icon-margin-right"></i> Aluno
                            </a>
                            <a class="dropdown-item waves-effect" href="/auth/coordinator">
                                <i class="mdi mdi-card-account-details-star icon-margin-right"></i> Coordenador
                            </a>
                        }

                        @if (User.Claims.Count() > 0)
                        {
                            <hr />
                            <a class="dropdown-item waves-effect" href="/logout">
                                <i class="mdi mdi-logout icon-margin-right"></i> Deslogar
                            </a>
                        }
                    </div>
                </li>
            </ul>
        </div>
    </div>
</nav>

<section id="main" class="masthead text-center text-white d-flex home-main-section" style="background-image:url('img/header.jpg');">
    <div class="container my-auto">
        <div class="row">
            <div class="col-lg-10 mx-auto">
                <h2 class="text-uppercase">
                    <strong>Bem-Vindo ao portal das aulas virtuais</strong>
                </h2>
                <br />
                Et voluptua dolor eos diam sadipscing nulla dignissim duo ipsum lorem vero aliquyam feugiat exerci sit duis ut no placerat
            </div>
        </div>
        <div class="col-lg-8 mx-auto">
            <br /><br />
            <a class="btn btn-outline-light waves-effect" style="border-radius: 2em" role="button" href="/auth/student">Ver Aulas</a>
        </div>
        <a class="btn btn-link js-scroll-trigger animated pulse slow infinite waves-effect waves-light" role="button" href="#about" style="padding: 0; margin-top: 20px; padding-left: 15px; padding-right: 15px; border-radius: 5em;">
            <i class="mdi mdi-chevron-down" style="font-size: 35px; color: white"></i>
        </a>
    </div>
</section>

