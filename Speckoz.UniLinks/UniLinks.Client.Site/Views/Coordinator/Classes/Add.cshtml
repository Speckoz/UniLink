@inject UniLinks.Client.Site.Services.Coordinator.CourseService _courseService

@model ResultModel<ClassVO>

@{
    ViewData["Title"] = "Adicionar uma Sala";
}

@if (Model != null)
{
    switch (Model.StatusCode)
    {
        case System.Net.HttpStatusCode.Created:
        case System.Net.HttpStatusCode.OK:
            break;
        default:
            <script>
                sendMessage("@Model.Message", "error");
            </script>
            break;
    }
}

<h5 class="text-center theme-text" style="font-weight: 500; margin: 10px">@ViewData["Title"]</h5>
<hr />

<div style="padding-top: 20px">
    <div class="text-center">
        <span class="theme-text">Adicionar nova Sala</span>
    </div>
    <div style="padding: 10px">
        <form method="post" asp-controller="Classes" asp-action="AddClass">
            <div class="row">
                <div class="col-12">
                    <div class="form-group md-form">
                        <input type="text" id="classUri" class="form-control theme-text validate" asp-for="Object.URI" required />
                        <label for="classUri" data-error="wrong" data-success="right">Url da Sala</label>
                    </div>
                </div>
                <div class="col-6">
                    @{
                        string token = User.FindFirst("Token").Value;
                        var courseInfo = await _courseService.GetCourseByCoordIdTaskAsync(token);
                    }

                    <div class="form-group">
                        <label data-error="wrong" data-success="right">Periodo</label>
                        <select asp-for="Object.Period" id="periodSelector">
                            @{
                                for (int i = 1; i <= courseInfo.Object.Periods; i++)
                                {
                                    <option value="@i">@(i)ยบ Periodo</option>
                                }
                            }
                        </select>
                    </div>
                </div>
                <div class="col-6">
                    <div class="form-group">
                        <label>Dias da semana</label>
                        <select id="weekDaysSelector" asp-for="Object.WeekDays" asp-items="Html.GetEnumSelectList<WeekDaysEnum>()">
                        </select>
                    </div>
                </div>
            </div>

            <div class="row justify-content-center" style="margin-top: 35px">
                <button type="submit" class="btn btn-success waves-effect">Adicionar</button>
                <a class="btn btn-outline-grey waves-effect" asp-action="Index" asp-controller="Classes">Voltar</a>
            </div>
        </form>
    </div>
</div>

<script src="~/js/choices.js"></script>
<script>
    new Choices("#periodSelector");
    new Choices("#weekDaysSelector");
</script>