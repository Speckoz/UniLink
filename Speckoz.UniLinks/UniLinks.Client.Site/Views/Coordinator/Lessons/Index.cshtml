@using System.Net

@model ResultModel<List<LessonDisciplineVO>>

@{
    ViewData["Title"] = "Aulas";
}

@if (Model != null)
{
    switch (Model.StatusCode)
    {
        case HttpStatusCode.OK:
            break;
        case HttpStatusCode.Created:
        case HttpStatusCode.NoContent:
            <script>
                    sendMessage("@Model.Message", "success");
            </script>
            break;
        default:
            <script>
                    sendMessage("@Model.Message", "error");
            </script>
            break;
    }
}

<h5 class="text-center theme-text" style="font-weight: 500; margin: 10px">@ViewData["Title"]</h5>
<hr />

<a asp-action="Add" asp-controller="Lessons" class="btn btn-primary rounded-circle button-circle-bottom waves-effect p-2 px-3 waves-float animated bounceInRight add-button-circle">
    <i class="mdi mdi-plus mdi-24px"></i>
</a>

@if (Model.Object.Count() == 0)
{
    <p class="text-center p-4">Ops! Nao existe nenhuma aula para mostrar! 😢</p>
}
else
{
    <section id="students-list-table" class="d-flex justify-content-lg-center nosection-padding">
        <table class="table table-hover table-students theme-bg theme-text">

            <thead>
                <tr>
                    <th scope="col">Info</th>
                    <th class="text-center" scope="col">Assuntos</th>
                    <th class="text-center" scope="col">Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var lesson in Model.Object)
                {
                    var duration = new DateTime(0001, 01, 01).AddMilliseconds(lesson.Lesson.Duration).ToString(@"HH \h e mm \min");

                    <tr class="tr-hover">
                        <td class="text-wrap">
                            <span>@lesson.Discipline.Name</span><br />
                            <span style="color: grey; font-size: 13px">@duration (@lesson.Lesson.Date.ToShortDateString())</span>
                        </td>
                        @if (!string.IsNullOrEmpty(lesson.Lesson.LessonSubject))
                        {
                            <td class="icons-td text-center">
                                <span style="cursor: pointer" class="blue-text unselectable" onclick="showSubject('@lesson.Lesson.LessonSubject')">Ver</span>
                            </td>
                        }
                        else
                        {
                            <td class="text-center">
                                <span style="font-size: 10px; color: indianred">Sem</span>
                                <span style="font-size: 10px; color: indianred">Assuntos</span>
                            </td>
                        }
                        <td class="icons-td text-center">
                            <form method="post" class="d-inline-flex" action="Coordinator/Lessons/Delete/@lesson.Lesson.LessonId">
                                <button>
                                    <i class="mdi mdi-delete mdi-24px red-text"></i>
                                </button>
                            </form>
                            <a href="Coordinator/Lessons/Update/@lesson.Lesson.LessonId">
                                <i class="mdi mdi-account-edit mdi-24px blue-text"></i>
                            </a>
                            <a href="@lesson.Lesson.URI" target="_blank">
                                <i class="mdi mdi-share mdi-24px green-text"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </section>
}

<div class="modal animated bounceInDown" id="modalLessonSubject" tabindex="-1" role="dialog" aria-labelledby="modalLessonSubject"
     aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content theme-bg theme-text">
            <div class="modal-header border-0 text-center">
                <h4 class="modal-title w-100 font-weight-bold text-center ml-4">Asstuntos</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span style="font-size: 14px" aria-hidden="true" class="theme-text">&times;</span>
                </button>
            </div>
            <div id="lessonsSubjects" class="modal-body mx-3"></div>
            <div class="modal-footer border-0 d-flex justify-content-center">
                <button class="btn btn-gradient waves-effect" data-dismiss="modal" aria-label="Close">Fechar</button>
            </div>
        </div>
    </div>
</div>

<script>
    function showSubject(lessonSubject) {
        const subjects = lessonSubject.split(';');

        if (subjects.length <= 0)
            return;

        const objDiv = document.getElementById("lessonsSubjects");

        let items = ``;

        subjects.forEach(function (x) {

            items += `<span style="font-size: 14px">${x}</span>
                <hr class="separator" />`;
        })

        objDiv.innerHTML = items;

        ShowModal("modalLessonSubject");
    }
</script>