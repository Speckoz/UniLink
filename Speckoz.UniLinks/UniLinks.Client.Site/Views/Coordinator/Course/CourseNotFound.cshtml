@{
    ViewData["Title"] = "Não há curso cadastrado";
}

<div class="row" style="margin-left: 0; margin-right: 0; margin-top: 4.5em">
    <div class="col-sm-12 my-auto">
        <div class="row justify-content-center">
            <i class="mdi mdi-alert" style="padding-bottom: 50px; color: #ee4b28; font-size: 70px"></i>
        </div>
        <div class="row justify-content-center">
            <h3 class="text-center">Você ainda não cadastrou seu curso!</h3>
        </div>
        <div class="row justify-content-center">
            <a asp-action="AddCourse" asp-controller="Course" class="btn btn-primary waves-effect" style="border-radius: 2em">Adicionar Curso</a>
        </div>
    </div>
</div>