@using System.Net

@model ResponseModel<CourseVO>

@{
    ViewData["Title"] = "Modificar Informaçoes do Curso";
}

@if (Model.StatusCode != HttpStatusCode.OK)
{
    <p class="red-text text-center">@Model.Message</p>
}

<div>
    <h3 class="text-center">@ViewData["Title"]</h3>

    <form method="post" asp-controller="Course" asp-action="UpdateCourse">

        <div class="container">
            <div class="row justify-content-center">
                <div class="md-form">
                    <input type="text" id="courseName" class="form-control" asp-for="Object.Name" />
                    <label for="courseName">Nome do Curso</label>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="md-form">
                    <input type="number" id="periodsNumber" class="form-control" asp-for="Object.Periods" />
                    <label for="periodsNumber">Nº Periodos</label>
                </div>
            </div>
            <div class="row justify-content-center">
                <button class="btn btn-primary waves-effect justify-content-center">Salvar</button>
            </div>
        </div>
    </form>
</div>