@using System.Net

@model ResultModel<CourseVO>

@{
    ViewData["Title"] = "Adicionar Curso";
}

@if (Model != null)
{
    switch (Model.StatusCode)
    {
        case HttpStatusCode.OK:
        case HttpStatusCode.Created:
        case HttpStatusCode.NotFound:
            break;
        default:
            <script>
                sendMessage("@Model.Message", "error");
            </script>
            break;
    }
}

<div class="row" style="margin-left: 0; margin-right: 0">
    <div class="col-sm-12 my-auto">
        <div class="text-center" style="padding-bottom: 2em; padding-top: 2em;">
            <span>Informe os campos abaixo para prosseguir!</span>
        </div>
        <form method="post" asp-controller="Course" asp-action="AddCourse">

            <div class="container">
                <div class="row justify-content-center">
                    <div class="md-form">
                        <input type="text" id="courseName" class="form-control theme-text" asp-for="Object.Name" />
                        <label for="courseName">Nome do Curso</label>
                    </div>
                </div>
                <div class="row justify-content-center">
                    <div class="md-form">
                        <input type="number" id="periodsNumber" class="form-control theme-text" asp-for="Object.Periods" />
                        <label for="periodsNumber">Nº Periodos</label>
                    </div>
                </div>
                <div class="row justify-content-center">
                    <button class="btn btn-success waves-effect justify-content-center" style="border-radius: 2em">Criar</button>
                </div>
                <div class="row justify-content-center">
                    <a asp-controller="Course" asp-action="Index" class="btn btn-outline-dark shadow-none waves-effect" style="border: 0 !important; color: var(--theme-text) !important">Cancelar</a>
                </div>
            </div>
        </form>
    </div>
</div>