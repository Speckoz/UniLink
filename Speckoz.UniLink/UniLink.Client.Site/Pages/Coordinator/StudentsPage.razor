@page "/admin/students"
<h1 class="text-center mt-2">Gerenciar Alunos</h1>
<hr class="separator" />


<button class="btn btn-primary rounded-circle button-circle-bottom waves-effect p-2 px-3 waves-float animated bounceInRight"
        data-toggle="modal" data-target="#modalNewStudent">
    <i class="mdi mdi-plus mdi-24px" />
</button>

@if (students is null)
{
    <p class="text-center py-2">Carregando...</p>
}
else if (students.Count == 0)
{
    <p class="text-center py-2">Ops! Nao existe nenhum estudante no curso.</p>
}
else
{
    <!--Table-->
    <div class="d-flex justify-content-lg-center">
        <table class="table table-hover table-students theme-bg theme-text">

            <thead>
                <tr>
                    <th scope="col">Nome</th>
                    <th scope="col">Email</th>
                    <th class="text-center" scope="col">Disciplinas</th>
                    <th class="text-center" scope="col">Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var student in students)
                {
                    <tr class="tr-hover">
                        <td class="text-wrap">@student.Name</td>
                        <td class="text-wrap">@student.Email</td>
                        <td class="icons-td text-center">
                            <span style="cursor: pointer" class="blue-text unselectable" @onclick="@(async () => await ViewDisciplines(student.DisciplinesList))">Ver</span>
                        </td>
                        <td class="icons-td text-center">
                            <button @onclick="@(async () => await RemoveStudent(student.Name))">
                                <span class="mdi mdi-delete red-text"></span>
                            </button>
                            <button @onclick="@(async () => await EditStudent(student.Name))">
                                <span class="mdi mdi-account-edit blue-text"></span>
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <!--Table-->
}

<!-- Modal Add Student -->
<div class="modal fade" id="modalNewStudent" tabindex="-1" role="dialog" aria-labelledby="modalNewStudent"
     aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content theme-bg theme-text">
            <div class="modal-header border-0 text-center">
                <h4 class="modal-title w-100 font-weight-bold text-center ml-5">Cadastrar Novo Aluno</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true" class="theme-text">&times;</span>
                </button>
            </div>
            <div class="modal-body mx-3">
                <!-- Nome -->
                <div class="md-form mb-5">
                    <input type="text" id="defaultForm-email" class="form-control validate theme-text">
                    <label data-error="wrong" data-success="right" for="defaultForm-email">Nome do Aluno</label>
                </div>
                <!-- Email -->
                <div class="md-form mb-4">
                    <input type="email" id="defaultForm-pass" class="form-control validate theme-text">
                    <label data-error="wrong" data-success="right" for="defaultForm-pass">Email do Aluno</label>
                </div>
            </div>
            <div class="modal-footer border-0 d-flex justify-content-center">
                <button class="btn btn-default">Cadastrar</button>
            </div>
        </div>
    </div>
</div>
<!-- End Modal -->

<!-- Modal Student Disciplines -->
<div class="modal fade" id="modalStudentDisciplines" tabindex="-1" role="dialog" aria-labelledby="modalStudentDisciplines"
     aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content theme-bg theme-text">
            <div class="modal-header border-0 text-center">
                <h4 class="modal-title w-100 font-weight-bold text-center ml-4">Disciplinas</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true" class="theme-text">&times;</span>
                </button>
            </div>
            <div class="modal-body mx-3" id="modal-disciplines-content">
                
            </div>
            <div class="modal-footer border-0 d-flex justify-content-center">
                <button class="btn btn-default" data-dismiss="modal" aria-label="Close">Fechar</button>
            </div>
        </div>
    </div>
</div>
<!-- End Modal -->
