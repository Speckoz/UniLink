@page "/admin/students"

<h1 class="text-center mt-2">Gerenciar Alunos</h1>
<hr />
<!--Table-->
<button class="btn btn-primary waves-effect rounded" data-toggle="modal" data-target="#modalNewStudent">Adicionar novo aluno</button>

<!-- Modal -->
<div class="modal fadeIn" id="modalNewStudent" tabindex="-1" role="dialog" aria-labelledby="modalNewStudent"
     aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header text-center">
                <h4 class="modal-title w-100 font-weight-bold text-center ml-5">Cadastrar Novo Aluno</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body mx-3">
                <!-- Nome -->
                <div class="md-form mb-5">
                    <input type="text" id="defaultForm-email" class="form-control validate">
                    <label data-error="wrong" data-success="right" for="defaultForm-email">Nome do Aluno</label>
                </div>
                <!-- Email -->
                <div class="md-form mb-4">
                    <input type="email" id="defaultForm-pass" class="form-control validate">
                    <label data-error="wrong" data-success="right" for="defaultForm-pass">Email do Aluno</label>
                </div>
            </div>
            <div class="modal-footer d-flex justify-content-center">
                <button class="btn btn-default">Cadastrar</button>
            </div>
        </div>
    </div>
</div>
<!-- End Modal -->
@if (students is null)
{
    <p class="text-center py-2">Carregando...</p>
}
else if (students.Count == 0)
{
    <p class="text-center py-2">Ops! Nao existe nenhum estudante no curso.</p>
}
else
{
    <div class="d-flex justify-content-lg-center">
        <table class="table table-hover table-students">

            <!--Table head-->
            <thead>
                <tr>
                    <th scope="col">Nome</th>
                    <th scope="col">Email</th>
                    <th scope="col">Ações</th>
                </tr>
            </thead>
            <!--Table head-->
            <!--Table body-->
            <tbody>
                @foreach (var student in students)
                {
                    <tr>
                        <td class="text-wrap">@student.User.Name</td>
                        <td class="text-wrap">@student.User.Email</td>
                        <td class="icons-td">
                            <button @onclick="@(async () => await RemoveStudent(student.User.Name))">
                                <span class="mdi mdi-delete red-text"></span>
                            </button>
                            <button @onclick="@(async () => await EditStudent(student.User.Name))">
                                <span class="mdi mdi-account-edit blue-text"></span>
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
            <!--Table body-->
        </table>
    </div>
}
<!--Table-->