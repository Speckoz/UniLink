    <button class="btn btn-primary rounded" data-toggle="modal" data-target="#modalNewStudent">Adicionar novo aluno</button>
    <!-- Modal -->
    <div class="modal fade" id="modalNewStudent" tabindex="-1" role="dialog" aria-labelledby="modalNewStudent"
         aria-hidden="true">
        <div class="modal-dialog" role="document">
