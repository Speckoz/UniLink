@using UniLink.Client.Site.Services

@inject ThemeService ThemeService

<div id="components-reconnect-modal" class="my-reconnect-modal components-reconnect-hide">
    <div class="show" style="@ThemeService.Theme">
        <p>
            Tentando se conectar com o servidor, verifique sua conexao!
        </p>
    </div>
    <div class="failed" style="@ThemeService.Theme">
        <p>
            A conexao com o servidor falhou.
        </p>
    </div>
    <div class="refused" style="@ThemeService.Theme">
        <p>
            A conexao com o servidor foi recusada!
        </p>
    </div>
</div>